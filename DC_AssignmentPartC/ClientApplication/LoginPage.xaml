<Page x:Class="ClientApplication.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClientApplication"
      mc:Ignorable="d" 
      d:DesignHeight="480" d:DesignWidth="830"
      Title="LoginPage"
      Background="FloralWhite">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel Margin="20">
            <TextBlock Text="Username:"/>
            <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10" Width="200"/>

            <TextBlock Text="Port:"/>
            <TextBox x:Name="PortTextBox" Margin="0,0,0,10" Width="200"/>

            <TextBlock Text="IP Address:"/>
            <TextBox x:Name="IpAddressTextBox" Margin="0,0,0,10" Width="200"/>

            <Button Content="Login" Click="LoginButton_Click" Width="100"/>
        </StackPanel>
        
    </Grid>
</Page>
